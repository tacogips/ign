{
  "name": "my-template",
  "version": "0.1.0",
  "description": "A new ign template",
  "author": "",
  "repository": "",
  "license": "MIT",
  "tags": [],
  "variables": {
    "project_name": {
      "type": "string",
      "description": "Name of the project",
      "required": true,
      "example": "my-project"
    },
    "description": {
      "type": "string",
      "description": "Project description",
      "required": false,
      "default": "A new project"
    },
    "enable_feature": {
      "type": "bool",
      "description": "Enable optional feature",
      "required": false,
      "default": false
    }
  },
  "settings": {
    "preserve_executable": false,
    "ignore_patterns": [
      ".git",
      ".DS_Store"
    ],
    "include_dotfiles": false
  }
}
